<h2>
  List Detail
</h2>

<AnimationContext @id="Detail Animation Context" @use={{this.detailTransition}} as |context|>
  {{#if this.selectedPerson}}
    <button type="button" {{on 'click' (fn (mut this.selectedPerson) null)}}>Back</button>
    <div class="detail-card">
      <h2 {{sprite context=context id=(concat "person:" this.selectedPerson.id ":name")}} class="detail-person-name">
        {{this.selectedPerson.name}}
      </h2>
      <h3 {{sprite context=context id=(concat "person:" this.selectedPerson.id ":title")}} class="detail-person-title">
        {{this.selectedPerson.title}}
      </h3>
      <p>{{this.selectedPerson.bio}}</p>
    </div>
  {{/if}}
</AnimationContext>

<AnimationContext @id="List Animation Context" @use={{this.listTransition}} as |context|>
  {{#unless this.selectedPerson}}
    <ul class="person-list">
      {{#each this.people as |person|}}
        <li> 
          <span {{sprite context=context id=(concat "person:" person.id ":name")}} class="list-person-name">
            {{person.name}}
          </span>
          <span {{sprite context=context id=(concat "person:" person.id ":title")}} class="list-person-title">
            {{person.title}}
          </span>
          <button type="button" {{sprite context=context}} {{on 'click' (fn (mut this.selectedPerson) person)}}>Details</button>
        </li>
      {{/each}}
    </ul>
  {{/unless}}
</AnimationContext>