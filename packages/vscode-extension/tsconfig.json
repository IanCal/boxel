{
  "compilerOptions": {
    "strictNullChecks": true,
    "module": "es2022",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "lib": ["es2020"],
    "outDir": "out",
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "paths": {
      "https://cardstack.com/base/*": ["../base/*"]
    }
  },
  "include": ["../base/**/*"],
  "exclude": ["node_modules", ".vscode-test"]
}
